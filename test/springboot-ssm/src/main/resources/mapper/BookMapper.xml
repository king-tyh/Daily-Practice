<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.test.springbootssm.mapper.BookMapper">
    <insert id="insertBook" parameterType="book">
        insert into novel(`title`,`desc`,`author`,`novel_type`,`tags`)
        values (#{title},#{desc},#{author},#{novel_type},#{tags})
    </insert>

    <select id="listBooks" resultType="book">
        select * from novel
    </select>

    <select id="queryBookByTitle" parameterType="java.lang.String" resultType="book">
        select * from novel where `title`=#{title}
    </select>
</mapper>